term.setBackgroundColor(colors.blue)
term.setTextColor(colors.white)
term.clear()
term.setCursorPos(1,1)
term.write('Benutzer: ')
name = read()
print()
term.write('Passwort: ')
pass = read()
print()
term.write('Themen Farbe (zum Beipiel blue): ')
colorme = read()
print()
term.write('Textfarbe (zum Beipiel red): ')
textcolor = read()
print()
term.write('Dialogfarbe (zum Beipiel purple): ')
diacol = read()


func3 = loadstring('return '..'colors.'..diacol)
func2 = loadstring('return '..'colors.'..textcolor)
func = loadstring('return '..'colors.'..colorme)
myColor = tonumber(func())
texty = tonumber(func2())
dialog = tonumber(func3())

f = fs.open('System/settings.cfg', 'w')
f.writeLine(name)
f.writeLine(pass)
a = tostring(myColor)
f.writeLine(a)
b = tostring(texty)
f.writeLine(b)
c = tostring(dialog)
f.write(c)
f.close()

